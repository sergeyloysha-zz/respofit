doctype
html
head
	include _head.jade
body
	.header
		.header__inner
			a.header__logo(href='#')
			ul.header__menu.right
				li.header__menu-item.hm
					span Trainingsplan<br>exportieren
				li.header__menu-item.hm
					a.header__menu-link.header__menu-link_calendar(href='#')
				li.header__menu-item
					a.header__menu-link.header__menu-link_menu(href='#')
					ul.dropdown
						li.dropdown__item
							a.dropdown__link(href='#')
								i.dropdown__icon.dropdown__icon_time
								span Mein Trainingsplan
						li.dropdown__item
							a.dropdown__link(href='#')
								i.dropdown__icon.dropdown__icon_headphones
								span Ubungen
						li.dropdown__item
							a.dropdown__link(href='#')
								i.dropdown__icon.dropdown__icon_calendar
								span Training Historie
						li.dropdown__item
							a.dropdown__link(href='#')
								i.dropdown__icon.dropdown__icon_heart
								span Extras
						li.dropdown__item
							a.dropdown__link(href='#')
								i.dropdown__icon.dropdown__icon_gear
								span Einstellungen
						li.dropdown__item
							a.dropdown__link(href='#')
								.dropdown__icon.dropdown__icon_label 12
								span Narichrichten

	.intro
		.image
			img.image__preview(src='images/40.jpg')

	.container
		.container__inner
			.head
				.head__col
					a.head__button-back(href='#') ZURUCK
						i.head__button-back_arrow
				.head__col
				.head__col
					h2.head__title.right Einstellungen
			.content
				.grid.grid_border
					.grid__col.grid__col_two.left
						fieldset
							input(placeholder='Registrierungsnummer', type='text')
							a.field_info(href='#') i
						fieldset
							input(placeholder='Muller Schmidt', type='text')
						fieldset
							select
								option Buro
					.grid__col.grid__col_two.right
						fieldset
							.switch
								span
									| Begleitende Musik (default)
								input#switch1.switch__toggle(type='checkbox')
								label(for='switch1').right
						fieldset
							.switch
								span
									| Neue Nachrichten
								input#switch2.switch__toggle(type='checkbox')
								label(for='switch2').right


	include _footer.jade