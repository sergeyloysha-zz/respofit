doctype
html
head
	include _head.jade
body

	include _header.jade

	form#pass-form.modal(style='display:none;')
		h2 Passwort ändern
		fieldset
			input(placeholder='Old password', type='password')
		fieldset
			input(placeholder='New password', type='password')
		fieldset
			input(placeholder='Repeat password', type='password')
		a.btn.btn_green.btn_small.btn_full OK

	.intro
		.image
			img.image__preview(src='images/40.jpg')

	.container
		.container__inner
			.head
				.head__col
					a.head__button-back(href='#') ZURUCK
						i.head__button-back_arrow
				.head__col
					h2.head__title.right Einstellungen
			.content
				.grid.grid_border
					.grid__col.grid__col_two_p
						fieldset
							.switch
								span
									| Begleitende Musik (default)
								input#switch1.switch__toggle(type='checkbox')
								label(for='switch1').right
						fieldset
							.switch
								span
									| Neue Nachrichten
								input#switch2.switch__toggle(type='checkbox')
								label(for='switch2').right
					.grid__col.grid__col_two_p
						fieldset
							.switch
								span
									| Audio - profil
								.sex.right
									input#radio_male.switch__sex(type='radio', name='sex', checked)
									label.left_label(for='radio_male') Male
									input#radio_female.switch__sex(type='radio', name='sex')
									label.right_label(for='radio_female') Female
						fieldset
							a(href='#pass-form', rel='modal:open', style="line-height: 70px") Passwort ändern
				fieldset.centered
					a(href='#').btn.btn_green.btn_third ok


	include _footer.jade