input[type="text"],
input[type="password"]
    display inline-block
    min-width 60%
    padding 23px 20px
    
    background #fff
    line-height 24px
    font-size 18px
    color #264257
    margin 0 0 0 20px
    
    border 0
    border-radius 5px
    
    box-shadow: 0 0 0 4px rgba(152, 152, 156, .15)
    transition box-shadow .2s
    

    &:first-child
        margin 0

    &:focus
        box-shadow: 0 0 0 4px rgba(38, 66, 87, .3)


/*
    Select
*/

.hidden_select_container {
    width: 0;
    height: 0;
    overflow: hidden;
}


.simpleselect {
    position: relative;
    min-width: 60%;
    border-radius 5px
    box-shadow: 0 0 0 4px rgba(152, 152, 156, .15)
}

.simpleselect .options {
    width: 100%;
}

.simpleselect .placeholder,
.simpleselect .options .option,
.simpleselect .options .optgroup .optgroup-label {
    line-height: 24px;
    padding 23px 0
    cursor: pointer;
    
}

.simpleselect .options .optgroup .optgroup-label {
    cursor: default;
    font-weight: bold;
}

.simpleselect .options .optgroup .option {
    padding-left: 20px;
}

.simpleselect .placeholder,
.simpleselect .options {
    background: #fff
    padding 23px 20px
    line-height 24px
    border-radius: 5px
}

.simpleselect .placeholder {
    position: relative;
}

.simpleselect .placeholder:after {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    right: 10px;
    width: 8px;
    background: url("data:image/png;base64,") 0 center no-repeat;
}

.simpleselect .placeholder:hover {
    background: #fafafa;
}

.simpleselect .options {
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1000;
}

.simpleselect .options .option.active {

}

.simpleselect.disabled .placeholder,
.simpleselect.disabled .placeholder:hover {
    background: #fafafa;
    color: #aaa;
    border-color: #eee;
    cursor: default;
}

.simpleselect.disabled .placeholder:after {
    opacity: .5;
}