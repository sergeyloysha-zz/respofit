.search
    clearfix()
    position relative
    margin 20px 0
    padding 0 0 20px 0
    border-bottom 1px solid #cfd8df
    
    &__close
        display block
        width 42px
        height 42px
        position absolute
        right 7px
        top 5px
        background-image url("../images/modal-close.png")
        background-repeat no-repeat
        background-position 0 0
        
        &:hover
            background-position 0 -42px
            
    &__title
        margin 0
        padding 0
        font-weight 300
        line-height 50px
        
    &__category
        display inline-flex
        background #cfd8df
        border-radius 100px
        padding 4px
        margin 0 0 0 20px
        
        &-close
            display inline-block
            width 42px
            height 42px
            background-image url("../images/modal-close.png")
            background-repeat no-repeat
            background-position 0 0
            
            &:hover
                background-position 0 -42px
            
        & span
            line-height 42px
            padding 0 20px
    
input.search__input
    width 100%
    padding 13px 60px
    border-radius 100px
    
    background-image url("../images/search_small.png")
    background-position 25px center
    background-repeat no-repeat
            
@media (max-width: 750px)

    .search
        margin 15px 0
        padding 0 0 15px 0
        
        &__close
            right 2px
            top 2px
        
        &__category
            margin 0
            float right
        
    input.search__input
        padding 11.5px 50px
        background-position 18px center