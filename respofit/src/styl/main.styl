@import 'nib'
@import 'normalize'
@import 'modal'
@import 'inputs'
@import 'buttons'
@import 'header'
@import 'head'

font_main = "Roboto"
font_color = #264257
color_green = #00c03f
button_blue = #5783a4

*
    outline none
    box-sizing border-box

clearfix()
    zoom 1
    &:after
    &:before
        content ""
        display table
    &:after
        clear both
        
.right
    text-align right
    float right
    
.left
    text-align left
    float left
    
.centered
    text-align center
    
.hide
    display none !important
    
p
    margin 0 0 20px 0
    
a
    transition: opacity 0.3s;
    text-decoration underline
    
    &:hover
        text-decoration none
        
    &:active
    &:focus
        outline none
        

html
body
    height 100%

body
    font 18px/22px font_main, "Helvetica Neue", Helvetica, Arial, sans-serif
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    text-rendering geometricPrecision
    //min-width 736px
    /*max-width 1920px*/
    background #e2e9ee
    color font_color
    
.header
.container
.footer
    
    width 100%
    
    &__inner
        position relative
        max-width 1366px
        padding 0 30px
        margin 0 auto
        clearfix()
        height 100%
                
/*
    Dropdown
*/

.dropdown
    display none
    position absolute
    top 85px
    right 0
    margin 0
    padding 0
    z-index 100
    list-style none
    min-width 300px
    z-index 99999
    
    &__item
        display block
        background #95a6b3
        
        &:nth-child(2n)
            background #808f9a
        
    &__link
        clearfix()
        display block
        padding 25px 30px
        line-height 50px
        color #fff
        text-align left
        text-decoration none
        
    &__icon
        display inline-block
        float left
        width 50px
        height 50px
        text-align center
        color #fff
        background url('../images/menu-icons.png') no-repeat
        margin 0 15px 0 0
        
        &_time
            background-position 0 -50px
        &_gear
            background-position 0 0
        &_headphones
            background-position 0 -100px
        &_heart
            background-position 0 -200px
        &_calendar
            background-position 0 -250px
        &_label
            background-position 0 -150px

/*
    Intro
*/

.image
.video
    position relative
    width 100%
    height auto

    &__preview
        display block
        width 100%
        height auto
        margin 0
        padding 0

.video
    &__mask
        position absolute
        width 100%
        height 100%;
        background rgba(0,0,0,.5)
            
    &__play
        display block
        width 90px
        height 90px
        background url('../images/play-video.png') no-repeat
        position absolute
        top 50%
        left 50%
        margin-top -45px
        margin-left -45px
        cursor: pointer
        
.image
    
    &__controls
        //position absolute
        
    &__control
        display block
        position absolute
        width 70px
        height 70px
        background-image url('../images/arrows.png')
        background-repeat no-repeat
        top 50%
        margin-top -35px
        
    &__control_left
        background-position 0 0
        left 70px
        
    &__control_right
        background-position 0 -70px
        right 70px
        
    &__data
        position absolute
        margin 0 auto
        padding 0 30px
        max-width 1366px
        width 100%
        height 100%
        
    &__text
    &__date
        position absolute
        text-align right
        bottom 20px
        
    &__text
        font-size 48px
        line-height 50px
        
    &__date
        font-size 100px
        line-height 100px
    
/*
    Content
*/
    
/*
    Lists
*/

.list
    margin 40px 0 0 0
    
.list__circle
    position relative
    margin 0 0 30px 0
    padding 0 0 0 100px
    min-height 80px
    
    span 
        font-size 18px
        line-height 25px
        font-weight 300
    
    &-circle
        position absolute
        top 0
        left 0
        width 80px
        height 80px
        background url('../images/item-circle.png') no-repeat
        line-height 80px
        text-align center
        font-size 36px
        font-weight 300
        
.list__control
    border-top 1px solid #cfd8df
    padding 40px 0
    text-align center
        
    & .btn
        width 400px
    
/*
    Grid
*/

.grid
    clearfix()
    width 100%
    margin 50px 0
    padding-bottom 50px
    
    &_border
        border-bottom 1px solid #cfd8df
    
        &:last-child
            padding-bottom 0
            border-bottom 0
        
        &:first-child
            padding-bottom 50px
            border-bottom 1px solid #cfd8df
    
    &__col
        float left
        font-weight 300
        
        &_two
            width 50%
    
        &_three
            width 33.33333%

        &_three:nth-child(1)
            padding 0 66px 0 0
        &_three:nth-child(2)
            padding 0 33px
        &_three:nth-child(3)
            padding 0 0 0 66px
            
/*
    V-blocks
*/

.v-block
    clearfix()
    
    &_grid
        
        & .grid
            border-bottom 1px solid #cfd8df
            margin 25px 0
            padding 0 0 25px 0
            
        
        & .grid__col_two:first-child
            padding 0 50px 0 0
            
        & .grid__col_two:last-child
            padding 0 0 0 50px
    
    &__preview
        display block
        position relative
        float left
        width 200px
        height 200px
        border-radius 100%
        background-color: #5783a4
        box-shadow 0px 0px 0px 4px rgba(152,152,156,.3)
        transition background-color .4s
        
        &:hover
             background-color: #39aa3d
        
    &__play
        position absolute
        top 50%
        left 50%
        margin-top -22px
        margin-left -22px
        width 44.5px
        height 44px
        background-image url('../images/play-video.png')
        background-repeat no-repeat
        background-size 44.5px 44px
        opacity .5
        transition opacity .4s
            
    &__time
        
        &_icon
            display inline-block
            width 16px
            height 20px
            background url('../images/timer_small.png') no-repeat
            vertical-align middle
            margin 0 10px 0 0
        
        & span
            font-size 12px
            color #8a8f93
        
    &__label
        position absolute
        text-align center
        bottom 30px
        color #fff
        font-weight 500
        width 100%
        opacity 0
        transition opacity .4s
        
    &__info 
        margin 10px 0 0 230px
        
        & h3
            font-size 18px
            font-weight 400
            margin 10px 0
            
.v-block__preview:hover
    & .v-block__play
        opacity 1
        
    & .v-block__label
        opacity 1
    
.field_info
    display inline-block
    margin 0 20px
    vertical-align middle
    width 65px
    height 65px
    border-radius 50%
    text-align center
    line-height 65px
    font-size 44px
    color #39aa3d
    font-family Georgia
    text-decoration none
    font-style italic
    font-weight 600
    background #fff
    box-shadow: 0 0 0 4px rgba(152, 152, 156, .15)
    transition box-shadow .2s
    
    &:hover
        box-shadow: 0 0 0 4px rgba(38, 66, 87, .3)
        color #39aa3d
            
/*
    Grid
*/

.grid
    clearfix()
    width 100%
    margin 25px 0
    padding-bottom 25px
        
        &:first-child
            padding-bottom 25px
        

/*
    Footer
*/

.footer
    height 75px
    background #95a6b3
    
    &__links
        height 100%
        text-align center
        
    &__link
        position relative
        display inline-block
        width 45px
        height 45px
        background-image url('../images/social.png')
        background-repeat no-repeat
        margin 0 10px
        top 15px
        
        &:hover
            opacity .8
        
        &_facebook
            background-position 0 -45px
            
        &_twitter
            background-position 0 0
            
        &_instagram
            background-position 0 -90px


.page
    width 100%
    height 100%
    min-height 420px
    display flex
    
.wrapper
    position relative
    z-index 200
    margin auto
    padding 40px 0

.screen
    position fixed
    width 100%
    height 100%
    background url('../images/screen.jpg') no-repeat
    background-size cover
    z-index 100
    
    &__mask
        position absolute
        width 100%
        height 100%
        background rgba(0,0,0,.7)
        z-index 100
    
.page .content
    padding 20px
    text-align center
    max-width 390px
    margin auto
        
    &__headline
        font-size 36px
        line-height 46px
        font-weight 300
        color #fff
        margin 0 0 30px 0
        
    &__sub-headline
        font-size 22px
        line-height 32px
        font-weight 300
        color #fff
        margin 30px 0
        
    &__logo
        display inline-block
        width 355px
        height 77px
        background url('../images/screen_logo.png') center no-repeat
        
    & .btn
        width 100%

.register .content
    width 400px
    
    &__logo
        margin-top 90px
        
    & form
        height 100%
        text-align center
        
    & input
        width 100%

.start .btn
.update .btn
    margin-top 65px
    
.highlights
    clearfix()
    margin-top 150px
    
    &__block
        width 32%
        display inline-block
        
        & img
            width 100%
            height auto
            margin 0
            padding 0 10px
            
@media (max-width: 1024px)

    .grid
        
        &__col
        
            &_three:nth-child(1)
                padding 0 32px 0 0
            &_three:nth-child(2)
                padding 0 16px
            &_three:nth-child(3)
                padding 0 0 0 32px
                
    .v-block
        
        &__preview
            width 150px
            height 150px
            
        &__info
            margin-left 180px
        
        &_grid
            
            & .grid__col_two:first-child
                padding 0 25px 0 0
                
            & .grid__col_two:last-child
                padding 0 0 0 25px
                
    .highlights
        display none
                
