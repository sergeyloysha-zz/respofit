/*
    Buttons
*/

.btn
    display inline-block
    min-width 100px
    height 50px
    line-height 50px
    
    padding 0 40px
    border-radius 5px
    
    background #39aa3d
    color #fff
    font-weight 300
    text-decoration none
    text-align center
    transition background .2s
        
    &_medium
        height 100px
        line-height 100px
        text-transform uppercase
        font-weight 400
        padding 0 20px
        
    &_large
        height 100px
        line-height 100px
        font-size 24px
        text-transform uppercase
        font-weight 500
        
    &_full
        width 100%
        
    &_half
        width 50%
        
    &_third
        width 30%
        
    &_rounded
        border-radius 100px
        
        
    
    &:hover
        text-decoration none
        color #fff
    
    &_green
        background #39aa3d
        
        &:hover
            background #42ae45
            
    &_red
        background #c03600
        
        &:hover
            background #da3d00
            
@media (max-width: 750px)
            
    /*
        Buttons
    */

    .btn
        height 40px
        line-height 40px
        padding 0 20px
            
        &_medium
            height 50px
            line-height 50px
            padding 0 10px
            
        &_large
            height 50px
            line-height 50px
            font-size 12px