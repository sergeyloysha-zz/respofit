/*
    Buttons
*/

.btn
    display inline-block
    height 50px
    line-height 50px
    padding 0 40px
    color #fff
    font-weight 300
    background #39aa3d
    text-decoration none
    text-align center
    
    &_small
        border-radius 50px
        
    &_medium
        height 100px
        line-height 100px
        font-size 18px
        border-radius 5px
        text-transform uppercase
        font-weight 400
        padding 0 20px
        
    &_large
        height 100px
        line-height 100px
        font-size 24px
        border-radius 5px
        text-transform uppercase
        font-weight 500
        
    &_full
        width 100%
        
    
    &:hover
        text-decoration none
        color #fff
    
    &_green
        background #39aa3d
        
        &:hover
            background #42ae45
            
    &_red
        background #c03600
        
        &:hover
            background #da3d00