.v
    margin 0 auto 20px auto
    max-width: 854px

    background: #fff
    border-radius 8px

    &__preview
        position relative

        &_image
            display block
            width 100%
            height 100%
            border-radius 8px 8px 0 0

        &_mask
            top 0
            left 0
            position absolute
            width 100%
            height 100%
            background rgba(0,0,0,.6)
            z-index 100
            border-radius 8px 8px 0 0
            
    &__info
        display flex
        clearfix()
        padding 20px
        
        &_timer
            
            span
                display block
                line-height 70px
                background url('../images/timer.png') 0 center no-repeat
                padding 0 0 0 50px
                color #555

        &_music
            margin-left auto
